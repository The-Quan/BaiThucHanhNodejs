<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>All Products</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
</head>
<body>

<div>
    <h2 class="text-center">All Products</h2>

    
    <form method="GET" action="/" id="sortForm">
        <label for="sortOrder">Sắp xếp:</label>
        <select name="order" id="sortOrder" class="form-control" onchange="submitSortForm()">
            <option value="asc">Tăng dần</option>
            <option value="desc">Giảm dần</option>
        </select>
        <input type="hidden" name="sortBy" value="ProductStoreCode">
    </form>
    
    
    <script>
        // Hàm này tự động submit form khi người dùng thay đổi lựa chọn trong dropdown
        function submitSortForm() {
            document.getElementById('sortForm').submit();
        }
    
        // Hàm này đảm bảo rằng khi tải lại trang, dropdown sẽ hiển thị đúng trạng thái sắp xếp
        window.onload = function() {
            const urlParams = new URLSearchParams(window.location.search);
            const order = urlParams.get('order');
            if (order) {
                document.getElementById('sortOrder').value = order;
            }
        };
    </script>
    
    
  
    <table class="table table-striped table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>Product Code</th>
                <th>Name</th>
                <th>Date</th>
                <th>Price</th>
                <th>Quantity</th>
                <th>Store Code</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <% products.forEach(product => { %>
            <tr>
                <td><%= product.ProductCode %></td>
                <td><%= product.ProductName %></td>
                <td><%= product.ProductDate.toDateString() %></td>
                <td><%= product.ProductOriginPrice %></td>
                <td><%= product.Quantity %></td>
                <td><%= product.ProductStoreCode %></td>
                <td>
                    <form action="/product/<%= product._id %>/delete" method="POST">
                        <button class="btn btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
            <% }) %>
        </tbody>
    </table>
</div>

<div>
    <h2 class="text-center">Add a New Product</h2>
    <form action="/product" method="POST" class="form-group">
        <div class="form-row">
            <div class="col">
                <label>Product Code:</label>
                <input type="text" name="ProductCode" class="form-control" required>
            </div>
            <div class="col">
                <label>Product Name:</label>
                <input type="text" name="ProductName" class="form-control" required>
            </div>
        </div>
        <div class="form-row mt-3">
            <div class="col">
                <label>Product Date:</label>
                <input type="date" name="ProductDate" class="form-control" required>
            </div>
            <div class="col">
                <label>Origin Price:</label>
                <input type="text" name="ProductOriginPrice" class="form-control" required>
            </div>
        </div>
        <div class="form-row mt-3">
            <div class="col">
                <label>Quantity:</label>
                <input type="number" name="Quantity" class="form-control" required>
            </div>
            <div class="col">
                <label>Store Code:</label>
                <input type="text" name="ProductStoreCode" class="form-control" required>
            </div>
        </div>
        <button type="submit" class="btn btn-primary mt-3">Add Product</button>
    </form>
</div>

</body>
</html>
